<%#
  Lets look for paragraph form partial (e.g. contentr/html_paragraph_form).
  In case such a  particular template doesn't exist, fall back to an
  generic, auto-generated form.
%>
<%= simple_form_for_contentr_paragraph(paragraph, area_name) do |f| %>
  <% begin %>
    <%= render "contentr/admin/paragraphs/#{@paragraph.class.to_s.underscore}_form",
      paragraph: paragraph, f: f %>
  <% rescue ActionView::MissingTemplate %>
    <%= render 'generic_form' %>
  <% end %>
<% end %>
