<%= simple_form_for @page,
    url:    (@page.new_record? ? contentr.admin_pages_path(root: @root_page) :
                                 contentr.admin_page_path(root: @root_page)),
    method: (@page.new_record? ? :post : :patch),
    html:   {class: 'form-horizontal'} do |f| %>

    <%= f.input :published, as: :boolean %>
    <%= f.input :name %>
    <%= f.input :language, as: :hidden %>
    <%= f.input :displayable_type, as: :hidden %>
    <%= f.input :displayable_id, as: :hidden %>
    <%= f.input :page_in_default_language_id, as: :hidden %>
    <%= f.input :slug, required: false %>
    <% unless @page.is_a?(Contentr::Site) %>
        <%= f.input :linked_to, required: true if @page.is_a?(Contentr::LinkedPage) %>
        <%= f.input :layout if @page.is_a?(Contentr::ContentPage) %>
    <% end %>
    <%#= f.input :linked_to, :required => false %>
    <%= f.association :page_type %>
    <%= f.button :submit %>
    <%= link_to t('cancel'), contentr.admin_pages_path %>
<% end %>
