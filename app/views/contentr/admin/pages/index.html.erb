<div id="page-manager">
  <h3>Manage Pages</h3>

  <p><%= link_to 'Create a new page', new_contentr_admin_page_url %>

  <% if @root_page.present? %>
    <div>
      <%= link_to('Eine Ebene hÃ¶her',
                  contentr_admin_pages_path(:root => @root_page.parent),
                  :rel => 'pm-navigate')
      %>
    </div>
  <% end %>

  <% if @pages.present? %>
    <table class="contentr pagegrid">
      <thead>
        <tr>
          <th class="icon">Icon</th>
          <th class="name">Name</th>
          <th class="slug">Slug</th>
          <th class="template">Template</th>
          <th class="layout">Layout</th>
        </tr>
      </thead>
      <tbody>
        <% @pages.each do |page| %>
          <tr data-page-id="<%= page.id %>">
            <td class="icon">
              <div class="container">
                <%= image_tag('contentr/admin/page-icon.png') %>
              </div>
            </td>
            <td class="name">
              <div class="container">
                <%= link_to(page.name,
                            contentr_admin_pages_path(:root => page),
                            'data-page-id' => page.id,
                            :rel => 'pm-navigate')
                %>
                <div class="tools">
                  <ul>
                    <li class="tool move-begin"><a href="#">Move</a></li>
                    <li class="tool move-end"><a href="#">Insert below</a></li>
                    <li class="tool edit"><%= link_to('Edit', edit_contentr_admin_page_path(page)) %></li>
                    <li class="tool delete"><%= link_to('Delete', contentr_admin_page_path(page), :method => :delete, :confirm => "Really delete page '#{page.name}'? All subpages will be deleted too.") %></li>
                  </ul>
                </div>
              </div>
            </td>
            <td class="slug"><%= page.slug %></td>
            <td class="template"><%= page.template %></td>
            <td class="layout"><%= page.layout %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div>Keine Seiten vorhanden</div>
  <% end %>
</div>